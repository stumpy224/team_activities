<h1>Listing members</h1>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td style="padding-right:2em;"><%= member.identifier %></td>
        <td style="padding-right:3em;"><%= member.name %></td>
        <td style="padding-right:3em;"><%= member.active %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %>&nbsp;|&nbsp;</td>
        <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
